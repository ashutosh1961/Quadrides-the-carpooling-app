<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".publishRide">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="200dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20sp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/green_border"
                android:orientation="vertical"
                android:padding="20sp">

                <TextView
                    android:id="@+id/detailedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="17sp" />




                <TextView
                    android:id="@+id/detailedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="17sp" />




                <TextView
                    android:id="@+id/detailedSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Source"
                    android:textColor="@color/black"
                    android:textSize="17sp" />



                <TextView
                    android:id="@+id/detailedDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Destination"
                    android:textColor="@color/black"
                    android:textSize="17sp" />



                <TextView
                    android:id="@+id/detailedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="17sp" />



                <TextView
                    android:id="@+id/detailedVehicleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arialbd"
                    android:padding="6dp"
                    android:text="Vehicle No"
                    android:textColor="@color/black"
                    android:textSize="17sp" />












                <Button
                    android:id="@+id/bookRideButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/roundback_100"
                    android:fontFamily="@font/arialbd1"
                    android:onClick="save"
                    android:text="Book Ride"
                    android:textAllCaps="false"
                    android:textSize="15sp" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </FrameLayout>


</ScrollView>